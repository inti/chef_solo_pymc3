include_recipe "python::pip"

execute "apt-get update"
execute "apt-get install libsuitesparse-dev -y"
execute "pip install git+https://github.com/njsmith/scikits-sparse.git --user"
execute "pip install git+https://github.com/pymc-devs/pymc@pymc3 --user"


